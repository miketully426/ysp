---
import Layout from "../layouts/Layout.astro";
---

<Layout title="About">
    <main class="about">
        <aside class="about-nav-box">
            <nav class="about-nav-container">
                <h2><a href="/about/">About YSP</a></h2>
                <ul>
                    <li><a href="/about/mission">Mission & Vision</a></li>
                    <li><a href="/about/values">Core Values</a></li>
                    <li><a href="/about/who">Who</a></li>
                </ul>
            </nav>
        </aside>
        <div class="about-container">
            <section class="about-content">
                <slot />
            </section>
        </div>
    </main>
</Layout>
<style>
    .about {
        margin-top: 60px;
        display: flex;
        align-content: flex-start;
        gap: 20px;
    }
    .about-nav-box {
        font-family: "Concert One";
        line-height: 1.5;
        background-color: #9c36b5;
        margin: 20px;
        border-radius: 30px;
        flex: 0 0 25ch;
    }
    .about-nav-container {
        margin: 20px;
    }
    a {
        text-decoration: none;
        color: #e9ecef;
    }
    a:hover {
        text-decoration: none;
        color: yellow;
    }

    .about-nav-container h2 {
        font-size: 32px;
    }
    .about-nav-container li {
        font-size: 20px;
        list-style: none;
    }
    .about-content {
        line-height: 1.5;
    }
    .about-container{
        border-radius: 30px;
        background-color: #9c36b5;
        flex: 1 0 900px;
    }
    .about-content {
        font-family: "Concert One";
        font-size: 18px;
        color: #e9ecef;
        padding: 40px;
    }

</style>
