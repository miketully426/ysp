---
import Layout from "../layouts/Layout.astro";
---

<Layout title="About">
    <aside class="about-nav-box">
        <nav class="about-nav-container">
            <h2><a href="/about/">About YSP</a></h2>
            <ul>
                <li><a href="/about/mission">Mission & Vision</a></li>
                <li><a href="/about/values">Core Values</a></li>
                <li><a href="/about/who">Who</a></li>
            </ul>
        </nav>
    </aside>
    <section class="about-content">
        <slot />
    </section>
</Layout>
<style>
    .about-nav-box {
        font-family: "Concert One";
        line-height: 1.5;
        background-color: #9c36b5;
        margin: 20px;
        width: 25ch;
        border-radius: 30px;
    }
    .about-nav-container {
        margin: 20px;
    }
    a {
        text-decoration: none;
        color: #e9ecef;
    }
    .about-nav-container h2 {
        font-size: 32px;
    }
    .about-nav-container li {
        font-size: 20px;
        list-style: none;
    }
    .about-content{
        line-height: 1.3;
    }
    .about-content{
        font-family: "Concert One";
        font-size: 18px;
        color: #e9ecef;
        background-color: #9c36b5;
        border-radius: 30px;
    }
    .about-content article{
        margin: 40px;
    }
</style>
