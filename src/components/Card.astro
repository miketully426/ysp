---
export interface Props {
	height: string;
	width: string;
	margin: string;
}

const { height, width, margin } = Astro.props;
---

<div class="content-card">
	<slot />
</div>
<style define:vars={{height, width, margin}}>
	.content-card{
		height: var(--height);
        width: var(--width);
        margin: var(--margin);
        background-color: rgba(156, 54, 181, .8);
        border-radius: 30px;
		border-width: 1px;
		border-style: solid;
		border-color: #C43959;
		box-shadow: 10px 10px 10px rgba(0, 0, 0, .75);
	}
</style>
