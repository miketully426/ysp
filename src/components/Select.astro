---
export interface Props {
    label: string;
    name: string;
    options: Array<any>;
}
const { label, name, options } = Astro.props;

---

<label>{label}
    <select name={name}>
        {options.map((item) => <option value={item}>{item}</option>)}
    </select>
</label>

<style>
    label {
        font-family: "Nunito", sans-serif;
        font-size: 20px;
        color: #e9ecef;
    }
    select {
        border-radius: 30px;
        font-size: 14px;
        height: 24px;
        margin-bottom: 8px;
        padding-left: 1ch;   
    }

</style>
